# HIGHLIGHT.IO DOKPLOY - CONFIGURAÇÃO DE PRODUÇÃO
# Baseado na configuração local que funcionou

# ==================== AUTENTICAÇÃO ====================
ADMIN_PASSWORD=password
AUTH_MODE=password
REACT_APP_AUTH_MODE=password

# ==================== CONFIGURAÇÕES GERAIS ====================
IN_DOCKER=true
IN_DOCKER_GO=true
ON_PREM=true
SSL=false
ENVIRONMENT=production
STORAGE_TYPE=filesystem
LOG_LEVEL=info
OBJECT_STORAGE_FS=/highlight-data

# ==================== POSTGRESQL ====================
POSTGRES_DB=highlight
POSTGRES_USER=highlight
POSTGRES_PASSWORD=AgriPostgres2024Secure!
PSQL_HOST=postgres
PSQL_DB=highlight
PSQL_USER=highlight
PSQL_PASSWORD=AgriPostgres2024Secure!
PSQL_PORT=5432

# ==================== CLICKHOUSE (SEM SENHA) ====================
CLICKHOUSE_ADDRESS=clickhouse:9000
CLICKHOUSE_DATABASE=default
CLICKHOUSE_USERNAME=default
CLICKHOUSE_USER=default
# CLICKHOUSE_PASSWORD= # SEM SENHA

# ==================== REDIS (SEM SENHA) ====================
REDIS_EVENTS_STAGING_ENDPOINT=redis:6379
# REDIS_PASSWORD= # SEM SENHA

# ==================== KAFKA ====================
KAFKA_SERVERS=kafka:9092
KAFKA_ADVERTISED_LISTENERS=PLAINTEXT://kafka:9092

# ==================== OPENTELEMETRY ====================
OTLP_ENDPOINT=http://collector:4318
OTLP_DOGFOOD_ENDPOINT=https://otel.highlight.io:4318

# ==================== SEGURANÇA ====================
SESSION_SECRET=AgriSession2024SuperSecretKey!
JWT_SECRET=AgriJWT2024SuperSecretSigningKey!
JWT_ACCESS_SECRET=AgriJWT2024SuperSecretSigningKey!

# ==================== ENTERPRISE (HOBBY MODE) ====================
LICENSE_KEY=
DISABLE_ENTERPRISE_FEATURES=true

# ==================== URLS DOKPLOY ====================
REACT_APP_FRONTEND_URI=https://highlight.agricompany-dev.com.br
REACT_APP_PRIVATE_GRAPH_URI=https://api-highlight.agricompany-dev.com.br/private
REACT_APP_PUBLIC_GRAPH_URI=https://api-highlight.agricompany-dev.com.br/public

# ==================== IMAGENS DOCKER ====================
BACKEND_IMAGE_NAME=ghcr.io/highlight/highlight-backend:docker-v0.5.2
FRONTEND_IMAGE_NAME=ghcr.io/highlight/highlight-frontend:docker-v0.5.2
CLICKHOUSE_IMAGE_NAME=clickhouse/clickhouse-server:24.3.15.72-alpine
POSTGRES_IMAGE_NAME=ankane/pgvector:v0.5.1
REDIS_IMAGE_NAME=redis:8.0.2
KAFKA_IMAGE_NAME=confluentinc/cp-kafka:7.7.0
ZOOKEEPER_IMAGE_NAME=confluentinc/cp-zookeeper:7.7.0
OTEL_COLLECTOR_IMAGE_NAME=otel/opentelemetry-collector-contrib:0.128.0

# ==================== CONFIGURAÇÕES EXTRAS ====================
REACT_APP_DISABLE_ANALYTICS=false
REACT_APP_FRONTEND_ORG=1
REACT_APP_IN_DOCKER=true
REACT_APP_OTLP_ENDPOINT=http://localhost:4318
RENDER_PREVIEW=true
SESSION_FILE_PATH_PREFIX=/tmp/
TZ=America/Sao_Paulo
